@page "/"

<PageTitle>Dashboard</PageTitle>

<div class="header">
    <div>
        <h1>Dashboard</h1>
        <p class="text-gray">Overview of your activity</p>
    </div>
    <div class="user-profile">
        <div class="text-right">
            <div class="font-bold">John Doe</div>
            <div class="text-sm text-gray">Admin</div>
        </div>
        <div class="avatar"></div>
    </div>
</div>

<div class="grid grid-cols-4">
    <div class="glass-card">
        <div class="text-gray text-sm">Total Revenue</div>
        <div class="stat-value">$54,230</div>
        <div class="text-sm text-accent">↑ 12% from last month</div>
    </div>
    <div class="glass-card">
        <div class="text-gray text-sm">Active Users</div>
        <div class="stat-value">2,450</div>
        <div class="text-sm text-accent">↑ 5% new users</div>
    </div>
    <div class="glass-card">
        <div class="text-gray text-sm">New Orders</div>
        <div class="stat-value">320</div>
        <div class="text-sm text-gray">Same as yesterday</div>
    </div>
    <div class="glass-card">
        <div class="text-gray text-sm">Avg. Session</div>
        <div class="stat-value">4m 32s</div>
        <div class="text-sm text-accent">↑ 2% improvement</div>
    </div>
</div>

<div class="grid grid-cols-3 mt-4">
    <!-- Main Chart Area (Span 2 columns) -->
    <div class="glass-card" style="grid-column: span 2;">
        <div class="font-bold text-lg mb-4">Revenue Overview</div>
        <div class="chart-container">
            <!-- Simple CSS Bar Chart Placeholder -->
            <div style="display: flex; align-items: flex-end; justify-content: space-around; height: 100%; padding-bottom: 20px;">
                @foreach (var val in new[] { 40, 70, 45, 90, 60, 80, 50, 75, 60, 90, 80, 95 })
                {
                    <div style="width: 6%; background: linear-gradient(to top, #38bdf8, #8b5cf6); border-radius: 4px; height: @(val)%; opacity: 0.8; transition: height 0.5s ease;"></div>
                }
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0 10px; color: #94a3b8; font-size: 0.8rem;">
                <span>Jan</span><span>Feb</span><span>Mar</span><span>Apr</span><span>May</span><span>Jun</span>
                <span>Jul</span><span>Aug</span><span>Sep</span><span>Oct</span><span>Nov</span><span>Dec</span>
            </div>
        </div>
    </div>

    <!-- Right Column: Recent Activity -->
    <div class="glass-card">
        <div class="font-bold text-lg mb-4">Recent Activity</div>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
            @foreach (var i in Enumerable.Range(1, 5))
            {
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <div style="width: 10px; height: 10px; border-radius: 50%; background: #38bdf8;"></div>
                    <div>
                        <div class="font-bold text-sm">New Order #@((1023 + i))</div>
                        <div class="text-xs text-gray">2 mins ago</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="glass-card mt-4">
    <div class="font-bold text-lg mb-4">Recent Transactions</div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in transactions)
                {
                    <tr>
                        <td class="text-gray">@item.Id</td>
                        <td class="font-bold">@item.Customer</td>
                        <td class="text-gray">@item.Date.ToShortDateString()</td>
                        <td>@item.Amount.ToString("C")</td>
                        <td>
                            <span style="padding: 4px 8px; border-radius: 12px; background: rgba(56, 189, 248, 0.2); color: #38bdf8; font-size: 0.75rem;">
                                @item.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    class Transaction
    {
        public string Id { get; set; } = "";
        public string Customer { get; set; } = "";
        public DateTime Date { get; set; }
        public decimal Amount { get; set; }
        public string Status { get; set; } = "Completed";
    }

    private List<Transaction> transactions = new()
    {
        new Transaction { Id = "#TRX-001", Customer = "Alice Smith", Date = DateTime.Now.AddDays(-1), Amount = 120.50m, Status = "Completed" },
        new Transaction { Id = "#TRX-002", Customer = "Bob Jones", Date = DateTime.Now.AddDays(-2), Amount = 450.00m, Status = "Pending" },
        new Transaction { Id = "#TRX-003", Customer = "Charlie Day", Date = DateTime.Now.AddDays(-3), Amount = 89.99m, Status = "Completed" },
        new Transaction { Id = "#TRX-004", Customer = "Dana White", Date = DateTime.Now.AddDays(-4), Amount = 1200.00m, Status = "Completed" },
    };
}
